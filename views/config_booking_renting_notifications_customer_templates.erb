<div class="top-navigation-bar">
  <h2 class="entity-title"><%=t.booking_settings.notifications.renting_customer_notification_templates%></h2>
</div>
<div class="admin_content_wrapper"  style="background-color: #f5f5f5; margin: 0">
  <div data-alerts="alerts" data-titles="{'success':'<%=t.entitymanagement.success%>','warning':'<%=t.entitymanagement.warning%>','error':'<%=t.entitymanagement.error%>'}" data-fade="10000"></div>

  <div id="content">

    <br>

    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="block">
          <ul class="nav nav-tabs" data-toggle="tabs">
            <li class="active">
              <a id="request_notification" href="#btabs-static-request"><%=t.booking_settings.notifications.email_customer_request_received%></a>
            </li>
            <li class="">
              <a id="confirmation_notification" href="#btabs-static-confirmation"><%=t.booking_settings.notifications.email_customer_reservation_confirmed%></a>
            </li>
            <li class="">
              <a id="request_payment_notification" href="#btabs-static-payment-request"><%=t.booking_settings.notifications.email_customer_payment_request_received%></a>
            </li>
            <li class="">
              <a id="payment_enabled_notification" href="#btabs-static-payment-enabled"><%=t.booking_settings.notifications.email_customer_payment_enabled%></a>
            </li>
          </ul>
          <div class="block-content tab-content">
            <div class="tab-pane active" id="btabs-static-request">
              <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="block block-bordered">
                    <div class="block-header bg-gray-lighter">
                      <h3 class="block-title"><%=t.booking_settings.notifications.template%></h3>
                    </div>
                    <div class="block-content block-content-narrow">
                      <form name="templates" action="/api/templates" method="PUT"
                            data-remote="ajax" data-remote-method="PUT" class="all-space">
                        <%= render_template_editor 'booking_customer_req_notification','','' %>
                        <div class="formrow-botonera">
                          <input type="submit" value="<%=t.entitymanagement.update%>"
                                 class="button blue-button">
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <% if @show_translations and @tmpl_request %>
                <div class="row">
                  <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="block block-bordered">
                      <div class="block-header bg-gray-lighter">
                        <h3 class="block-title"><%=t.booking_settings.notifications.translations%></h3>
                      </div>
                      <div class="block-content block-content-narrow">
                        <div id="request_notification_container">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="tab-pane" id="btabs-static-confirmation">
              <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="block block-bordered">
                    <div class="block-header bg-gray-lighter">
                      <h3 class="block-title"><%=t.booking_settings.notifications.template%></h3>
                    </div>
                    <div class="block-content block-content-narrow">
                      <form name="templates" action="/api/templates" method="PUT"
                            data-remote="ajax" data-remote-method="PUT" class="all-space">
                        <%= render_template_editor 'booking_customer_notification','','' %>
                        <div class="formrow-botonera">
                          <input type="submit" value="<%=t.entitymanagement.update%>"
                                 class="button blue-button">
                        </div>
                      </form>
                      <% if @show_translations and @tmpl_confirmation %>
                        <div class="row">
                          <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="block block-bordered">
                              <div class="block-header bg-gray-lighter">
                                <h3 class="block-title"><%=t.booking_settings.notifications.translations%></h3>
                              </div>
                              <div class="block-content block-content-narrow">
                                <div id="confirmation_notification_container">
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <div class="tab-pane" id="btabs-static-payment-request">
              <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="block block-bordered">
                    <div class="block-header bg-gray-lighter">
                      <h3 class="block-title"><%=t.booking_settings.notifications.template%></h3>
                    </div>
                    <div class="block-content block-content-narrow">
                      <form name="templates" action="/api/templates" method="PUT"
                            data-remote="ajax" data-remote-method="PUT" class="all-space">
                        <%= render_template_editor 'booking_customer_req_pay_now_notification','','' %>
                        <div class="formrow-botonera">
                          <input type="submit" value="<%=t.entitymanagement.update%>"
                                 class="button blue-button">
                        </div>
                      </form>
                      <% if @show_translations and @tmpl_request_pay_now %>
                        <div class="row">
                          <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="block block-bordered">
                              <div class="block-header bg-gray-lighter">
                                <h3 class="block-title"><%=t.booking_settings.notifications.translations%></h3>
                              </div>
                              <div class="block-content block-content-narrow">
                                <div id="request_pay_now_notification_container">
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="btabs-static-payment-enabled">
              <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                  <div class="block block-bordered">
                    <div class="block-header bg-gray-lighter">
                      <h3 class="block-title"><%=t.booking_settings.notifications.template%></h3>
                    </div>
                    <div class="block-content block-content-narrow">
                      <form name="templates" action="/api/templates" method="PUT"
                            data-remote="ajax" data-remote-method="PUT" class="all-space">
                        <%= render_template_editor 'booking_customer_notification_payment_enabled','','' %>
                        <div class="formrow-botonera">
                          <input type="submit" value="<%=t.entitymanagement.update%>"
                                 class="button blue-button">
                        </div>
                      </form>
                      <% if @show_translations and @tmpl_payment_enabled %>
                        <div class="row">
                          <div class="col-sm-12 col-md-12 col-lg-12">
                            <div class="block block-bordered">
                              <div class="block-header bg-gray-lighter">
                                <h3 class="block-title"><%=t.booking_settings.notifications.translations%></h3>
                              </div>
                              <div class="block-content block-content-narrow">
                                <div id="pay_enabled_notification_container">
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>