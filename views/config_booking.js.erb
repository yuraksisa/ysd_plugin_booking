        else{             
          $("#rent_content > div").hide(); //Hide all content
          $("#rent_tabs li").attr("id",""); //Reset id's
          $(this).parent().attr("id","current"); // Activate this
          $('#' + $(this).attr('name')).fadeIn(); // Show content for current tab          
        }
      }); 

      $("#activities_content > div").hide(); // Initially hide all content
      $("#activities_tabs li:first").attr("id","current"); // Activate first tab
      $("#activities_content > div:first").fadeIn(); // Show first tab content
      $('#activities_tabs a').click(function(e) {
        e.preventDefault();
        if ($(this).attr("name") == 'preview') {
          ($('#home_frame')[0]).contentWindow.location.reload();
        }
        if ($(this).closest("li").attr("id") == "current"){ //detection for current tab
         return;       
        }
        else{             
          $("#activities_content > div").hide(); //Hide all content
          $("#activities_tabs li").attr("id",""); //Reset id's
          $(this).parent().attr("id","current"); // Activate this
          $('#' + $(this).attr('name')).fadeIn(); // Show content for current tab          
        }
      });      

      $("#booking\\.driver_min_age\\.rules").bind('change', function(){
         noDriverMinAgeRules(!$(this).is(':checked'));
      });

      noDriverMinAgeRules(!$("#booking\\.driver_min_age\\.rules").is(':checked'));

      function noDriverMinAgeRules(disabled){
          $('#booking\\.driver_min_age').prop("disabled", disabled);
          $('#booking\\.driver_min_age').css('background', disabled ? '#EEE' : '#FFF');
          $('#booking\\.driver_min_age\\.driving_license_years_min').prop("disabled", disabled);
          $('#booking\\.driver_min_age\\.driving_license_years_min').css('background', disabled ? '#EEE' : '#FFF');
          $('#booking\\.driver_min_age\\.cost').prop("disabled", disabled);
          $('#booking\\.driver_min_age\\.cost').css('background', disabled ? '#EEE' : '#FFF');
          $('#booking\\.driver_min_age\\.driving_license_years_max').prop("disabled", disabled);
          $('#booking\\.driver_min_age\\.driving_license_years_max').css('background', disabled ? '#EEE' : '#FFF');
          $('#booking\\.driver_min_age\\.deposit').prop("disabled", disabled);
          $('#booking\\.driver_min_age\\.deposit').css('background', disabled ? '#EEE' : '#FFF');
          $('#booking\\.driver_min_age\\.allowed').prop("disabled", disabled);
      }

  });

});