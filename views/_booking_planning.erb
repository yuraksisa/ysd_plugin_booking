<style type="text/css">
  #parent, #operation_area {
	height: 500px;
  }
			
  #planning_table {
  	font-size: 0.7em;
	  width: 1800px !important;
  }

  #planning_table .data.filled {
    cursor: hand;
    cursor: pointer;
  }

  #planning_table tr:first th {
  	background: #EEE;
  }

  #planning_table th {
    background: #EEE;
    padding: 5px 2px;
    font-size: 0.90em;
  } 

  #planning_table td {
  	border: 1px solid #DDD;
  	padding: 5px 2px;
  }

  #planning_table .data {
  	text-align: center;
  }

  @keyframes selected {
    from { background-color: red; }
    to { background-color: inherit; }
  }

  .selected {
    animation: selected 1s infinite; /* IE 10+ */
  }  

</style>
