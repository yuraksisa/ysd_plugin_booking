<style type="text/css">
  #parent, #operation_area {
	height: 500px;
  }
			
  #planning_table {
  	font-size: 0.7em;
	  width: 1800px !important;
  }

  #planning_table .data.filled {
    cursor: hand;
    cursor: pointer;
  }

  #planning_table tr:first th {
  	background: #EEE;
  }

  #planning_table th {
    background: #EEE;
    padding: 5px 2px;
    font-size: 0.90em;
  } 

  #planning_table td {
  	border: 1px solid #DDD;
  	padding: 5px 2px;
  }

  #planning_table .data {
  	text-align: center;
  }

  .available {
    color: green;
  }

  .unavailable {
    color: red;
  }

  @keyframes selected {
    from { background-color: red; }
    to { background-color: inherit; }
  }

  .selected {
    animation: selected 1s infinite; /* IE 10+ */
  }  

.pending-assignation-table {
  table-layout: fixed;
  border: 1px solid #DDD;
  background-color: #EEE;
}
.pending-assignation-table .table-cell {
   border-right: 1px solid #DDD;
   width: 1.6em;
   font-size: 0.85em;
 }
 #operation_area {
   max-height: 450px; 
   overflow-y: scroll;
 }
 .working_area {
    max-height: 295px;
    overflow-y: scroll;
 }
</style>
<div class="container_12">
  <div class="grid_9">
    <div id="parent" style="overflow: auto">
      <table id="planning_table">
        <thead>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
  <div class="grid_3">
    <div id="operation_container" class="left-margin smaller_text">
      <div id="operation_header">
        <form name="assign_pending_search">
          <div class="formrow">
            <select id="planning_views" class="uppercase_text smaller_text" style="width:99%">
              <option value="home">Inicio</option>
              <option value="assign_pending">Ver reservas pendientes de asignar</option>
              <option value="prereservations">Ver prereservas</option>
            </select>  
          </div>
        </form>
        <form name="reservation_search" style="display: none">
          <div class="formrow">
            <input type="text" id="reservation_search_text" maxlength="40"
              placeholder="buscar reserva" style="width: 60%"/>
            <input type="button" id="reservation_search_button" class="form-button search-entity-button" value="Buscar"  style="width: 25%"/>
          </div>
        </form>
      </div>
      <div id="operation_area">
      </div>
      <div id="operation_bottom">
      </div>
    </div>
    <div id="prereservation_container" class="left-margin smaller_text" style="display:none; max-height: 350px; overflow-y: scroll">
      <%= partial :prereservation_form %> 
    </div>    
  </div>
</div>

