<div id="booking_list">
  <form name="filter" class="guiblock">
         <h3 class="left-float" style="position: relative; top: 5px">Reservas</h3>
    <div class="formrow right-float">
      <select id="filter" class="fieldcontrol">
        <option value="all">Mostrar todos</option>
      </select>
    </div>
  </form>
</div>
<div class="elements-list" style="clear:both">
  <table id="elements_table" class="table">
     <thead class="table-header">
       <tr>
         <th class="table-header-title" scope="col" style="width:5%"><%= t.not_assigned_bookings.table.id %></th>
         <th class="table-header-title centered_text" scope="col" style="width:20%"><%= t.not_assigned_bookings.table.date_from %></th>
         <th class="table-header-title centered_text" scope="col" style="width:20%"><%= t.not_assigned_bookings.table.date_to %></th>         
         <th class="table-header-title centered_text" scope="col" style="width:35%"><%= t.not_assigned_bookings.table.customer %></th>
         <th class="table-header-title centered_text" scope="col" style="width:15%"><%= t.not_assigned_bookings.table.phone %></th>
         <th class="table-header-title centered_text" scope="col" style="width:10%"><%= t.not_assigned_bookings.table.color %></th>
       </tr>
     </thead>
     <tbody id="elements_tbody" class="table-tbody">             
     </tbody>
  </table>
</div>

<script type="text/tmpl" id="script_booking_line">
    <tr>
      <td class="table-cell left_text" style="border-bottom:none"><a href="/admin/booking/bookings/<%%= entity.id %>"><%%= entity.id %></a></td>
      <td class="table-cell centered_text" style="border-bottom:none"><%%= formatter.formatDate(entity.date_from,'dd.MM.yyyy') %> </td>
      <td class="table-cell centered_text" style="border-bottom:none"><%%= formatter.formatDate(entity.date_to,'dd.MM.yyyy') %> </td>
      <td class="table-cell centered_text" style="border-bottom:none"><%%= entity.customer_name %> <%%=entity.customer_surname%></td>
      <td class="table-cell centered_text" style="border-bottom:none"><%%= entity.customer_phone %> <%%=entity.customer_mobile_phone%></td>
      <td class="table-cell centered_text" style="border-bottom:none">
         <form name="color">
            <input type="hidden" name="id" value="<%%=entity.id%>"/>
            <input type="color" class="planning_color" name="planning_color" value="<%%=entity.planning_color%>"/>
         </form>
      </td>
    </tr>
    <tr>      
      <td  class="table-cell centered_text" colspan="2">
      </td>
      <td class="table-cell centered_text" colspan="4">
          <table class="table" style="border:1px solid #EEE">
            <thead class="table-header">
              <tr>
                <th class="table-cell left_text" scope="col" style="width:50%"><%=t.booking_management.form.booking_resources.item%></th>
                <th class="table-cell centered_text" scope="col" style="width:50%"><%=t.booking_management.form.booking_resources.resource%></th>                                  
              </tr>
            </thead>
            <tbody class="table-tbody">
              <%% var item = null; 
                  for (var resourceIdx=0; resourceIdx < entity.booking_line_resources.length; resourceIdx++) { 
                    item = entity.booking_line_resources[resourceIdx];%>
                <tr class="table-row">
                   <td class="table-cell left_text"><%%=item.item_id%> - <%%= item.item_description %></td>
                   <td class="table-cell centered_text">
                     <%= partial :not_assigned_bookings_resource %>
                   </td>
                </tr>
              <%% } %>
            </tbody>
          </table>
      </td>      
    </tr>
</script>  