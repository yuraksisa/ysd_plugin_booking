 <div class="container_12">
   <div class="grid_8">
   	 <div class="highlight_block top-margin">
       <%= partial(:reserva, :locals => {:booking => booking}) %>  
     </div>
   </div>
   <div class="grid_4 top-margin">
     <%= partial(:booking_price, :locals => {:booking => booking}) %>  
   </div>
 </div>
 <% if booking.total_pending > 0 %>
 <div class="container_12">
   <div class="grid_12">
   	  <%= partial(:booking_payment, :locals => {:booking => booking, :booking_deposit => booking_deposit, :booking_payment => booking_payment}) %>
   </div>
 </div>
 <% end %>