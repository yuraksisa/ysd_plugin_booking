<div class="top-navigation-bar">
  <h2 class="entity-title"><%=t.setup_wizard.title%></h2>
</div>
<div class="admin_content_wrapper">
  <div class="content">
    <div class="row">
      <div class="col-lg-6">
        <form name="setup_renting_step_1" action="/admin/booking/setup-step-1" method="POST">
          <h3><%=t.setup_step_1.title%></h3>
          <br>
          <p><%=t.setup_step_1.description%></p>
          <br>
          <% @types_of_business.each do |type_of_business| %>
              <input type="radio" name="type_of_business" id="type_of_business" value="<%=type_of_business.code%>"
               <%if type_of_business.code == @current_type_of_business%>checked<%end%>><%=type_of_business.name%></input>
              <br><br>
          <% end %>
          <hr>
          <div class="pull-right">
            <a href="/admin/booking/setup" role="button" class="btn btn-warning"><%=t.setup_wizard.previous_step%></a>
            <button type="submit" class="btn btn-primary">
              <%=t.setup_wizard.next_step%>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

