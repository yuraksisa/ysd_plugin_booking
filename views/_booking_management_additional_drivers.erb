      <form name="driver" style="border:1px solid #EEE">
        <input type="hidden" name="id" value="<%%=entity.id%>"/>
        <div class="container_12">
          <div class="grid_6">
               <div class="more_contrast_text top-margin" style="text-decoration:underline; margin-left:5px"><%=t.booking_management.form.additional_driver_1_title%></div>            
              <div class="element_template">
                <div class="entity-field">
                  <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_name %></span>
                  <span class="entity-fieldvalue">
                    <input type="text" maxlength="40" size="12" name="additional_driver_1_name" id="additional_driver_1_name"
                      value="<%%=entity.additional_driver_1_name%>"/>
                    <input type="text" maxlength="40" size="13" name="additional_driver_1_surname" id="additional_driver_1_surname"
                      value="<%%=entity.additional_driver_1_surname%>"/>
                  </span>
                </div>
              </div> 
              <div class="element_template">
                <div class="entity-field">
                  <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_date_of_birth %></span>
                  <span class="entity-fieldvalue">
                     <input type="text" name="additional_driver_1_date_of_birth" id="additional_driver_1_date_of_birth" class="date_control" size="15" maxlength="10"/>
                  </span>
                </div>
              </div>               
              <% if booking_item_family.driver_license %> 
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_document_id %></span>
                     <span class="entity-fieldvalue">
                       <input type="text" maxlength="50" size="25" name="additional_driver_1_document_id" id="additional_driver_1_document_id"
                      value="<%%=entity.additional_driver_1_document_id%>"/>
                    </span>
                  </div>
              </div>               
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_license_number %></span>
                     <span class="entity-fieldvalue">
                       <input type="text" maxlength="50" size="25" name="additional_driver_1_driving_license_number" id="additional_driver_1_driving_license_number"
                      value="<%%=entity.additional_driver_1_driving_license_number%>"/>                       
                    </span>
                  </div>
              </div> 
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_license_date %></span>
                     <span class="entity-fieldvalue">                     
                        <input type="text" name="additional_driver_1_driving_license_date" id="additional_driver_1_driving_license_date" class="date_control" size="15" maxlength="10"/>
                     </span>
                  </div>
              </div> 
              <% end %>          
          </div>
          <div class="grid_6">

               <div class="more_contrast_text top-margin" style="text-decoration:underline; margin-left:5px"><%=t.booking_management.form.additional_driver_2_title%></div>            
              <div class="element_template">
                <div class="entity-field">
                  <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_name %></span>
                  <span class="entity-fieldvalue">
                    <input type="text" maxlength="40" size="12" name="additional_driver_2_name" id="additional_driver_2_name"
                      value="<%%=entity.additional_driver_2_name%>"/>
                    <input type="text" maxlength="40" size="13" name="additional_driver_2_surname" id="additional_driver_1_surname"
                      value="<%%=entity.additional_driver_2_surname%>"/>
                  </span>
                </div>
              </div> 
              <div class="element_template">
                <div class="entity-field">
                  <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_date_of_birth %></span>
                  <span class="entity-fieldvalue">
                     <input type="text" name="additional_driver_2_date_of_birth" id="additional_driver_2_date_of_birth" class="date_control" size="15" maxlength="10"/>
                  </span>
                </div>
              </div>               
              <% if booking_item_family.driver_license %> 
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_document_id %></span>
                     <span class="entity-fieldvalue">
                       <input type="text" maxlength="50" size="25" name="additional_driver_2_document_id" id="additional_driver_2_document_id"
                      value="<%%=entity.additional_driver_2_document_id%>"/>
                    </span>
                  </div>
              </div>                  
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_license_number %></span>
                     <span class="entity-fieldvalue">
                       <input type="text" maxlength="50" size="25" name="additional_driver_2_driving_license_number" id="additional_driver_2_driving_license_number"
                      value="<%%=entity.additional_driver_2_driving_license_number%>"/>                       
                    </span>
                  </div>
              </div> 
              <div class="element_template">
                  <div class="entity-field">
                     <span class="entity-fieldlabel less_contrast_text"><%= t.booking_management.form.driver_license_date %></span>
                     <span class="entity-fieldvalue">                     
                        <input type="text" name="additional_driver_2_driving_license_date" id="additional_driver_2_driving_license_date" class="date_control" size="15" maxlength="10"/>
                     </span>
                  </div>
              </div> 
              <% end %>

          </div>
        </div>
        <div class="navigation-bar bottom-margin">
              <div class="navigation-bar-crud-buttons right-float right-margin">
                <input type="submit" class="update-entity-button action-button entity-management-button" value="<%=t.entitymanagement.update%>"/>
              </div>
        </div> 
      </form>
