<div class="top-navigation-bar">
  <h2 class="entity-title"><%=t.booking_settings.form.activities_customer_notification_templates%></h2>
</div>
<div class="admin_content_wrapper"  style="background-color: #f5f5f5; margin: 0">
  <div data-alerts="alerts" data-titles="{'success':'<%=t.entitymanagement.success%>','warning':'<%=t.entitymanagement.warning%>','error':'<%=t.entitymanagement.error%>'}" data-fade="10000"></div>

  <div id="content">

    <br>

    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="block ">
          <div class="block-header bg-gray-lighter">
            <h3 class="block-title"><%=t.booking_configuration_templates.email_customer_request_received%></h3>
          </div>
          <div class="block-content block-content-narrow">
            <form name="templates" action="/api/templates" method="PUT"
                  data-remote="ajax" data-remote-method="PUT" class="all-space">
              <%= render_template_editor 'order_customer_req_notification','','' %>
              <div class="formrow-botonera">
                <input type="submit" value="<%=t.entitymanagement.update%>"
                       class="button blue-button">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="block ">
          <div class="block-header bg-gray-lighter">
            <h3 class="block-title"><%=t.booking_configuration_templates.email_customer_reservation_confirmed%></h3>
          </div>
          <div class="block-content block-content-narrow">
            <form name="templates" action="/api/templates" method="PUT"
                  data-remote="ajax" data-remote-method="PUT" class="all-space">
              <%= render_template_editor 'order_customer_notification','','' %>
              <div class="formrow-botonera">
                <input type="submit" value="<%=t.entitymanagement.update%>"
                       class="button blue-button">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="block ">
          <div class="block-header bg-gray-lighter">
            <h3 class="block-title"><%=t.booking_configuration_templates.email_customer_payment_request_received%></h3>
          </div>
          <div class="block-content block-content-narrow">
            <form name="templates" action="/api/templates" method="PUT"
                  data-remote="ajax" data-remote-method="PUT" class="all-space">
              <%= render_template_editor 'order_customer_req_pay_now_notification','','' %>
              <div class="formrow-botonera">
                <input type="submit" value="<%=t.entitymanagement.update%>"
                       class="button blue-button">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="block ">
          <div class="block-header bg-gray-lighter">
            <h3 class="block-title"><%=t.booking_configuration_templates.email_customer_payment_enabled%></h3>
          </div>
          <div class="block-content block-content-narrow">
            <form name="templates" action="/api/templates" method="PUT"
                  data-remote="ajax" data-remote-method="PUT" class="all-space">
              <%= render_template_editor 'order_customer_notification_payment_enabled','','' %>
              <div class="formrow-botonera">
                <input type="submit" value="<%=t.entitymanagement.update%>"
                       class="button blue-button">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>


</div>
</div>